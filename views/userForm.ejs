<%- include("layouts/header")-%>
<div class="flex items-center justify-center mt-40"> 
    <div class="bg-base-300 p-8 rounded shadow-md w-full max-w-md">
        <form action="/saveUser" method="POST" class="space-y-4" autocomplete="off">
            <h2 class="text-2xl font-semibold mb-4">Add User</h2>
            <div class="flex flex-col">
                <label for="firstname" class="text-sm font-medium text-neutral">First Name</label>
                <input
                    type="text"
                    id="firstname"
                    name="firstname"
                    placeholder="Enter first name"
                    class="input border-slate-800"
                    required
                >
            </div>

            <div class="flex flex-col">
                <label for="lastname" class="text-sm font-medium text-neutral">Last Name</label>
                <input
                    type="text"
                    id="lastname"
                    name="lastname"
                    placeholder="Enter last name"
                    class="input border-slate-800"
                    required
                >
            </div>

            <div class="flex flex-col">
                <label for="email" class="text-sm font-medium text-neutral">Email</label>
                <input
                    type="email"
                    id="email"
                    name="email"
                    placeholder="Enter email"
                    class="input border-slate-800"
                    required
                >
            </div>
            <div>
            <button class="btn btn-accent border-neutral ml-48"><a href="http://localhost:3000/userlist">Cancel</a></button>
            <button type="submit" class="btn btn-secondary border-neutral">Submit</button>
        </div>
        </form>
    </div>
</div>


<%- include("layouts/footer") -%> 
