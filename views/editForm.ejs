<%- include("layouts/header")-%>

<div>
<div class="flex items-center justify-center mt-44"> 
    <div class="bg-base-300 p-8 rounded shadow-md w-full max-w-md">
        <h2 class="text-2xl font-semibold mb-4">Edit User</h2>
        <form action="/updateuser" method="POST" class="space-y-4" autocomplete="off">
            <input type="hidden" name="id" value="<%= user.id %>" >

            <div class="flex flex-col">
                <label for="firstname" class="text-sm font-medium text-neutral">First Name</label>
                <input
                    type="text"
                    id="firstname"
                    name="firstname"
                    value="<%= user.firstname %>"
                    placeholder="Enter first name"
                    class="input border-slate-800"
                    required pattern="[A-Za-z\s]+"
                    >
            </div>

            <div class="flex flex-col">
                <label for="lastname" class="text-sm font-medium text-neutral">Last Name</label>
                <input
                    type="text"
                    id="lastname"
                    name="lastname"
                    value="<%= user.lastname %>"
                    placeholder="Enter last name"
                    class="input border-slate-800"
                    required pattern="[A-Za-z\s]+"               
                    >
            </div>

            <div class="flex flex-col">
                <label for="email" class="text-sm font-medium text-neutral">Email</label>
                <input
                    type="email"
                    id="email"
                    name="email"
                    value="<%= user.email %>"
                    placeholder="Enter email"
                    class="input border-slate-800"
                    required                >
            </div>

            <button type="submit" class="btn btn-primary">Update User</button>
        </form>
    </div>
</div>
</div>
<%- include("layouts/footer") -%> 
